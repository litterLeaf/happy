<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/app_yellow">
        <TextView
            android:id="@+id/textView"
            style="@style/text_wrap_layout"
            android:layout_centerInParent="true"
            android:textColor="@color/app_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/auth" />
        <ImageView
            android:id="@+id/message"
            style="@style/image_wrap_layout"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:src="@drawable/messages"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_item_height"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/info_item_height"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:id="@+id/view_not_finish_person"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_round_20_white"
                        android:visibility="gone"
                        >
                        <ImageView
                            style="@style/image_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/info_item_top1"
                            android:src="@drawable/data_11"
                            />
                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_marginTop="@dimen/info_item_top2"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/app_yellow"
                            android:textSize="14sp"
                            android:text="@string/person_info"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/view_finish_person"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_round_20_yellow">

                        <ImageView
                            style="@style/image_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/data_1" />

                        <ImageView
                            style="@style/image_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/info_item_top4"
                            android:src="@drawable/selected" />

                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/info_item_top2"
                            android:text="@string/person_info"
                            android:textColor="@color/app_white"
                            android:textSize="14sp" />

                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/info_item_top3"
                            android:text="@string/hailed_auth"
                            android:textColor="@color/app_blue"
                            android:textSize="12sp" />

                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="17dp"
                            android:layout_marginStart="17dp"
                            android:layout_marginTop="357dp"
                            android:text="@string/please_make_original_data_submit_can_done_after_all_data_is_completed"
                            android:textColor="@color/app_orange"
                            android:textSize="12sp" />
                    </RelativeLayout>
                </FrameLayout>
                <View
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/info_item_height"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:id="@+id/view_not_finish_employ"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_round_20_white"
                        android:visibility="gone"
                        >
                        <ImageView
                            style="@style/image_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/info_item_top1"
                            android:src="@drawable/data_21"
                            />
                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_marginTop="@dimen/info_item_top2"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/app_yellow"
                            android:textSize="14sp"
                            android:text="@string/employ_info"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/view_finish_employ"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_round_20_yellow"
                        >
                        <ImageView
                            style="@style/image_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/data_2"
                            />
                        <ImageView
                            style="@style/image_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/info_item_top4"
                            android:src="@drawable/selected"
                            />
                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_marginTop="@dimen/info_item_top2"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/app_white"
                            android:textSize="14sp"
                            android:text="@string/employ_info"
                            />
                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_marginTop="@dimen/info_item_top3"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/app_blue"
                            android:textSize="12sp"
                            android:text="@string/hailed_auth"
                            />
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/info_item_height"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/info_item_height"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:id="@+id/view_not_finish_contact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_round_20_white"
                        android:visibility="gone"
                        >
                        <ImageView
                            style="@style/image_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/info_item_top1"
                            android:src="@drawable/data_31"
                            />
                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_marginTop="@dimen/info_item_top2"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/app_yellow"
                            android:textSize="14sp"
                            android:text="@string/contact_info"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/view_finish_contact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_round_20_yellow"
                        >
                        <ImageView
                            style="@style/image_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/data_3"
                            />
                        <ImageView
                            style="@style/image_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/info_item_top4"
                            android:src="@drawable/selected"
                            />
                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_marginTop="@dimen/info_item_top2"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/app_white"
                            android:textSize="14sp"
                            android:text="@string/contact_info"
                            />
                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_marginTop="@dimen/info_item_top3"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/app_blue"
                            android:textSize="12sp"
                            android:text="@string/hailed_auth"
                            />
                    </RelativeLayout>
                </FrameLayout>
                <View
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/info_item_height"
                    android:layout_weight="1"
                    >
                    <RelativeLayout
                        android:id="@+id/view_not_finish_upload_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_round_20_white"
                        android:visibility="gone"
                        >
                        <ImageView
                            style="@style/image_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/info_item_top1"
                            android:src="@drawable/data_41"
                            />
                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_marginTop="@dimen/info_item_top2"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/app_yellow"
                            android:textSize="14sp"
                            android:text="@string/upload_photo"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/view_finish_upload_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_round_20_yellow"
                        >
                        <ImageView
                            style="@style/image_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/data_4"
                            />
                        <ImageView
                            style="@style/image_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/info_item_top4"
                            android:src="@drawable/selected"
                            />
                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_marginTop="@dimen/info_item_top2"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/app_white"
                            android:textSize="14sp"
                            android:text="@string/upload_photo"
                            />
                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_marginTop="@dimen/info_item_top3"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/app_blue"
                            android:textSize="12sp"
                            android:text="@string/hailed_auth"
                            />
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26dp"
                >
                <com.yinshan.happycash.widget.userdefined.ProfilProgressView
                    android:id="@+id/progressView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:id="@+id/progressText"
                    style="@style/text_wrap_layout"
                    android:layout_centerInParent="true"
                    android:textColor="@color/app_blue"
                    />
            </RelativeLayout>
            <TextView
                style="@style/text_wrap_layout"
                android:layout_marginTop="9dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#d6d6d6"
                android:textSize="12sp"
                android:text="@string/data_integrity"
                />

            <RelativeLayout
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_btn_blue">

                <TextView
                    style="@style/text_wrap_layout"
                    android:layout_centerInParent="true"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
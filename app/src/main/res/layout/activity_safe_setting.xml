<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        style="@style/text_wrap_layout"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="42dp"
                        android:textColor="@color/app_orange"
                        android:textSize="14sp"
                        android:text="@string/name"
                        />
                    <TextView
                        style="@style/text_wrap_layout"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="42dp"
                        android:textColor="@color/app_blue"
                        android:textSize="14sp"
                        android:text="@string/test"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/f6f6f6"
                    android:layout_marginLeft="42dp"
                    android:layout_marginRight="42dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        style="@style/text_wrap_layout"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="42dp"
                        android:textColor="@color/app_orange"
                        android:textSize="14sp"
                        android:text="@string/telephone"
                        />
                    <TextView
                        style="@style/text_wrap_layout"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="42dp"
                        android:textColor="@color/app_blue"
                        android:textSize="14sp"
                        android:text="@string/test"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/f6f6f6"
                    android:layout_marginLeft="42dp"
                    android:layout_marginRight="42dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        style="@style/text_wrap_layout"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="42dp"
                        android:textColor="@color/app_blue"
                        android:textSize="14sp"
                        android:text="@string/change_the_pattern_password"
                        />
                    <ImageView
                        style="@style/image_wrap_layout"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="42dp"
                        android:src="@drawable/path_8_copy"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/f6f6f6"
                    android:layout_marginLeft="42dp"
                    android:layout_marginRight="42dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        style="@style/text_wrap_layout"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="42dp"
                        android:textColor="@color/app_blue"
                        android:textSize="14sp"
                        android:text="@string/reload_id"
                        />
                    <ImageView
                        style="@style/image_wrap_layout"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="42dp"
                        android:src="@drawable/path_8_copy"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/f6f6f6"
                    android:layout_marginLeft="42dp"
                    android:layout_marginRight="42dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>
            </LinearLayout>
            <TextView
                style="@style/text_wrap_layout"
                android:layout_marginLeft="43dp"
                android:layout_marginRight="43dp"
                android:layout_marginTop="20dp"
                android:textColor="#4a2e09"
                android:textSize="14sp"
                android:text="@string/if_want_change_phone_please_call__"
                />
        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/btnQuit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_btn_blue">
        <TextView
            style="@style/text_wrap_layout"
            android:layout_centerInParent="true"
            android:textColor="@color/app_white"
            android:textSize="18sp"
            android:text="@string/quit_login"
            />
    </RelativeLayout>

</RelativeLayout>
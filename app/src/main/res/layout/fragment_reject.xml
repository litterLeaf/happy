<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/app_yellow">
        <TextView
            style="@style/text_wrap_layout"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/app_name"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="289dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:background="@color/app_yellow">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="72.5dp"
                        android:background="@drawable/bg_btn_fff097"
                        >
                        <TextView
                            style="@style/text_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="7dp"
                            android:textSize="12sp"
                            android:textColor="@color/app_blue"
                            android:text="Mohon maaf,pengajuan anda ditolak"
                            />
                        <TextView
                            android:id="@+id/leftDay"
                            style="@style/text_wrap_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="28dp"
                            android:textSize="12sp"
                            android:textColor="@color/app_blue"
                            android:text="Silahkan coba lagi dalam -- hari"
                            />
                    </RelativeLayout>
                    <ImageView
                        style="@style/image_wrap_layout"
                        android:background="@drawable/cat_31"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="146.5dp"
                        android:layout_centerHorizontal="true">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/day"
                                style="@style/text_wrap_layout"
                                android:textSize="50dp"
                                android:textColor="@color/app_blue"
                                android:textStyle="bold"
                                android:text="00"
                                />
                            <TextView
                                style="@style/text_wrap_layout"
                                android:textSize="12dp"
                                android:textColor="@color/app_blue"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:text="Hari"
                                />
                        </LinearLayout>

                        <TextView
                            style="@style/text_wrap_layout"
                            android:textSize="50dp"
                            android:textColor="@color/color_shadow_yellow"
                            android:textStyle="bold"
                            android:text=":"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/hour"
                                style="@style/text_wrap_layout"
                                android:textSize="50dp"
                                android:textColor="@color/app_blue"
                                android:textStyle="bold"
                                android:text="00"
                                />
                            <TextView
                                style="@style/text_wrap_layout"
                                android:textSize="12dp"
                                android:textColor="@color/app_blue"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:text="Jam"
                                />
                        </LinearLayout>
                        <TextView
                            style="@style/text_wrap_layout"
                            android:textSize="50dp"
                            android:textColor="@color/color_shadow_yellow"
                            android:textStyle="bold"
                            android:text=":"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/minute"
                                style="@style/text_wrap_layout"
                                android:textSize="50dp"
                                android:textColor="@color/app_blue"
                                android:textStyle="bold"
                                android:text="00"
                                />
                            <TextView
                                style="@style/text_wrap_layout"
                                android:textSize="12dp"
                                android:textColor="@color/app_blue"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:text="Menit"
                                />
                        </LinearLayout>
                        <TextView
                            style="@style/text_wrap_layout"
                            android:textSize="50dp"
                            android:textColor="@color/color_shadow_yellow"
                            android:textStyle="bold"
                            android:text=":"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/second"
                                style="@style/text_wrap_layout"
                                android:textSize="50dp"
                                android:textColor="@color/app_blue"
                                android:textStyle="bold"
                                android:text="00"
                                />
                            <TextView
                                style="@style/text_wrap_layout"
                                android:textSize="12dp"
                                android:textColor="@color/app_blue"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:text="Detik"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginTop="260dp"
                    android:background="@color/white">

                </RelativeLayout>
                <ImageView
                    style="@style/image_wrap_layout"
                    android:background="@drawable/pic"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="235dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="12sp"
                android:textColor="#9B9B9B"
                android:text="@string/reject_txt1"
                android:visibility="gone"
                />
        </LinearLayout>
    </ScrollView>



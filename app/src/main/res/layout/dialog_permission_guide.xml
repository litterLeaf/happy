    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:orientation="vertical"
        android:background="@drawable/bg_round_50_yellow">
        <TextView
            style="@style/text_wrap_layout"
            android:layout_marginTop="54dp"
            android:layout_gravity="center_horizontal"
            android:textSize="17sp"
            android:textColor="@color/app_blue"
            android:text="Izin Aplikasi Dibutuhkan"
            android:gravity="center_horizontal" />

        <TextView
            style="@style/text_wrap_layout"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="@color/app_orange"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="Kami membutukan data pengguna untuk melaukan analisis dan menentukan rating pada kredit anda,silakan melakukan otorisasi informasidi bawah:"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_white_round_60"
            android:orientation="vertical">
            <TextView
                style="@style/text_wrap_layout"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:textColor="@color/app_brown"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="1.  Otorisasi lokasi geografis
\n2.  Otorisasi kontak
\n3.  Mengizinkan HappyCash untuk
     menghubungi nomor telpon anda
\n4.  Otorisasi SMS
\n5.  Otorisasi foto dan rekaman"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_confirm"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_btn_blue">
            <TextView
                style="@style/text_wrap_layout"
                android:text="Diizinkan"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="17sp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>



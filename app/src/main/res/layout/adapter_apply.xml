<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp">

    <RelativeLayout
        android:layout_width="30dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_oval_d6d6d6"
            android:layout_centerHorizontal="true">
        </RelativeLayout>
        <View
            android:id="@+id/bottomLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="11dp"
            android:layout_centerHorizontal="true"
            android:background="#d6d6d6"
            />
        <View
            android:id="@+id/topLine"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:background="#d6d6d6"
            />
    </RelativeLayout>
    <View
        android:layout_width="15dp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/time"
            style="@style/text_wrap_layout"
            android:textSize="12sp"
            android:textColor="#9b9b9b"
            android:text="20-01-2017 12:30"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_20_yellow"
            android:layout_marginTop="7dp"
            android:orientation="vertical"
            >
            <TextView
                style="@style/text_wrap_layout"
                android:textSize="16sp"
                android:textColor="@color/app_blue"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Verifikasi"
                />
            <com.yinshan.happycash.view.loan.view.impl.support.ApplyFitTextView
                style="@style/text_wrap_layout"
                android:textSize="14sp"
                android:textColor="#4a2e09"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:text="@string/test_desc"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>

</LinearLayout>